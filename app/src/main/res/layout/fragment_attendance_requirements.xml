    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AttendanceRequirementsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Working days"
                android:textColor="#191919"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/roboto"
                android:text="Would you like to consider Saturday and Sunday as working days?"
                android:textColor="#636363"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                android:drawableStart="@drawable/ic_information"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:text="Monday to Friday are considered as working days"
                android:textColor="#AEAEAE"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/arb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="  Saturday"
                        android:textColor="#191919"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_toEndOf="@+id/arb1"
                        android:fontFamily="@font/roboto"
                        android:text="  Sunday"
                        android:textColor="#191919"
                        android:textSize="14sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/arb1"
                        android:fontFamily="@font/roboto"
                        android:text="  Both Saturday and Sunday"
                        android:textColor="#191919"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RadioGroup>

            <View
