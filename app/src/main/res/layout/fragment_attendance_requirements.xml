                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColorHint="#AEAEAE"
                app:boxStrokeColor="#E6E6E6">

